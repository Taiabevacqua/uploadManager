<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

  <body>
    <%- include('partials/header') %>
      <div class="container mt-5">
        <h1>Nuevo producto con UNA IMAGEN</h1>
        <hr>
        <div class="row">
          <div class="col-12 col-md-8 col-lg-6">
            <div class="card">
              <div class="card-body">
                <form action="" method="POST" class="row" enctype="multipart/form-data">
                  <div class="col-12 col-md-4">
                    <img src="" id="img-prev" alt="" class="img-fluid">
                  </div>
                  <div class="col-12 col-md-8">
                    <div class="mb-3">
                      <label for="name" class="form-label">Nombre del producto</label>
                      <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                      <label for="image" class="form-label">Agregar imagen</label>
                      <input class="form-control" type="file" id="image" name="one-image"
                        onchange="showImagePrev(event)">
                    </div>

                    <button type="submit" class="btn btn-dark">Guardar</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <script>
        const showImagePrev = ({ target }) => {
          const urlImage = URL.createObjectURL(target.files[0]);
          document.getElementById('img-prev').setAttribute('src', urlImage)
        }
      </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
  </body>

</html>